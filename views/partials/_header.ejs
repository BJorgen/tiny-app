<head>
    <div>
        <h1>Tiny App</h1>
        <a href="/urls/new">Create New TinyURL</a>
    </div>

    <% if(username){ %>

        <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
            <label for="logout-button"><%=username%></label>
            <button type="submit" name="logout-button" class="btn btn-danger">Logout</button>
        </div>
        </form>


    <% } else{ %>

        <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
            <label for="longURL">Login:</label>
            <input class="form-control" type="text" name="username" placeholder="username" style="width: 300px; margin: 1em" required minlength="1">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        </form>

    <% } %>


</head>

